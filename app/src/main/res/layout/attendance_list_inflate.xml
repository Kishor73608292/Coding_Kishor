<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lnrMain"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/buttonbg2"
        android:layout_height="wrap_content">


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_margin="@dimen/_5sdp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:id="@+id/lblEmpName"
               android:textColor="@color/black"
               android:text="Kishor"
               android:layout_alignParentLeft="true"
               android:fontFamily="@font/regularsans"
               android:textSize="@dimen/_12sdp"
               android:layout_height="wrap_content"></TextView>

           <TextView
               android:layout_width="wrap_content"
               android:id="@+id/lblEmpID"
               android:textColor="@color/black"
               android:text="BT0010"
               android:layout_alignParentRight="true"
               android:fontFamily="@font/regularsans"
               android:textSize="@dimen/_12sdp"
               android:layout_height="wrap_content"></TextView>

       </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnrHome"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:gravity="center"

        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/inImage"
            android:layout_width="@dimen/_50sdp"
            android:src="@drawable/ic_access_alarm"
            android:layout_height="@dimen/_50sdp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/lblITime"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:fontFamily="@font/regularsans"
            android:text="Out Time"
            android:layout_toRightOf="@id/inImage"
            android:textSize="@dimen/_12sdp"
            android:layout_height="wrap_content"></TextView>



    </RelativeLayout>




    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/lblInTime"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:fontFamily="@font/regularsans"
        android:text="In Time"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@id/RoundImg"
        android:layout_height="wrap_content"></TextView>



</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/outImage"
                    android:layout_width="@dimen/_50sdp"
                    android:src="@drawable/ic_access_alarm"
                    android:layout_height="@dimen/_50sdp"></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/lblOTime"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/regularsans"
                    android:text="Out Time"
                    android:layout_toRightOf="@id/outImage"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"></TextView>


            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/lblOutTime"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:fontFamily="@font/regularsans"
                android:text="Out Time"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@id/RoundImg"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>



    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/lblDate"
                android:textColor="@color/black"
                android:text="BT0010"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/regularsans"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_height="match_parent">


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/leaveChart"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_250sdp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>